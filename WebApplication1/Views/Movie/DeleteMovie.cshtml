@model MovieDto
@{
    ViewData["Title"] = "Delete Movie";
}

<h3>Are You Sure To Delete Movie @Model.Title In Genre @Model.Genre With Price @Model.Price That Released In @Model.ReleaseDate ?</h3>
<div>
    <a class="btn btn-success" asp-action="ConfirmDeleteMovie" asp-route-id="@Model.Id">Yes</a>
    <a class="btn btn-danger" asp-action="Index" >No</a>
</div>
